{
	"name": "@neocodemirror/svelte",
	"version": "0.0.2",
	"description": "Svelte Action to add codemirro to your apps ðŸ˜‰",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"type": "module",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/*"
	],
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"compile:watch": "tsup --watch",
		"compile": "tsup ",
		"pub": "pnpm build && pnpm publish --no-git-checks --access public",
		"pub:dry": "pnpm build && pnpm publish --dry-run --no-git-checks --access public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PuruVJ/neocodemirror.git"
	},
	"keywords": [
		"codemirror",
		"svelte",
		"react-codemirror",
		"svelte",
		"small",
		"tiny",
		"performant",
		"neocodemirror",
		"editor",
		"monaco"
	],
	"author": "Puru Vijay",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/PuruVJ/neocodemirror/issues"
	},
	"dependencies": {
		"csstype": "^3.1.2",
		"nanostores": "^0.8.1"
	},
	"devDependencies": {
		"svelte": "^3.58.0"
	},
	"peerDependencies": {
		"codemirror": "^6.0.1",
		"@codemirror/commands": "^6.2.0",
		"@codemirror/language": "^6.0.0",
		"@codemirror/state": "^6.0.0",
		"@codemirror/view": "^6.0.0",
		"@codemirror/lint": "^6.0.0"
	},
	"homepage": "https://github.com/PuruVJ/neocodemirror"
}
